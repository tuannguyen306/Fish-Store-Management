<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit Sale</h1>
    <% if @sale.persisted? %>
      <%= button_to 'Destroy', @sale, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <% if @sale.errors.any? %>
    <div class="error-message mb-4 p-4 bg-red-100 text-red-700 rounded-md">
      <h2 class="font-semibold">There were some errors with your submission:</h2>
      <ul>
        <% @sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @sale, local: true, class: "space-y-4", multipart: true) do |f| %>
    <div>
      <%= f.label :product_name, "Product Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :product_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :quantity, "Quantity", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :quantity, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :price, "Price", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :total, "Total", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :total, step: 0.01, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.submit "Update Sale", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
